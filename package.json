{
  "name": "companion-dashboard",
  "author": "Tom Hillmeyer",
  "description": "Display variables from Bitfocus Companion",
  "main": "src/main.js",
  "homepage": "./",
  "private": true,
  "version": "1.3.0",
  "scripts": {
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "dev": "vite --host",
    "build": "tsc -b && vite build",
    "build:ios": "vite build && npx cap sync ios",
    "ios": "npx cap open ios && open 'ios/Companion Dashboard/Companion Dashboard.xcodeproj",
    "preview": "vite preview",
    "dist": "electron-builder",
    "dist:mac:intel": "electron-builder --mac --x64",
    "dist:mac:arm": "electron-builder --mac --arm64",
    "dist:win": "electron-builder --win --x64",
    "dist:all": "electron-builder -mwl"
  },
  "dependencies": {
    "@capacitor/core": "^7.0.0",
    "@capacitor/filesystem": "^7.1.1",
    "@capacitor/ios": "^7.0.0",
    "@capacitor/share": "^7.0.1",
    "cors": "^2.8.5",
    "electron-notarize": "^1.2.2",
    "express": "^5.1.0",
    "react": "^19.1.0",
    "react-colorful": "^5.6.1",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-moveable": "^0.56.0",
    "react-selecto": "^1.26.3",
    "uuid": "^11.1.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^7.0.0",
    "@electron/notarize": "^3.0.1",
    "@electron/osx-sign": "^2.0.0",
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "dotenv": "^16.5.0",
    "electron": "^36.3.2",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^1.0.0",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.creativeland.companiondashboard",
    "productName": "Companion Dashboard",
    "files": [
      "dist/**/*",
      "public/web-dashboard.html",
      "src/assets/**/*",
      "src/main.js",
      "src/webServer.js",
      "src/preload.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "public",
      "output": "out"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "entitlements.plist",
      "entitlementsInherit": "entitlements.plist",
      "gatekeeperAssess": false,
      "identity": "Creativeland, LLC (22SGVMMH49)",
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}"
    },
    "afterSign": "./notarize.js",
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "public/icon.ico",
      "artifactName": "${productName}-${version}-windows-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
