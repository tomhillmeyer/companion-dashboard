{
  "name": "companion-dashboard",
  "author": "Tom Hillmeyer",
  "description": "Display variables from Bitfocus Companion",
  "main": "src/main.js",
  "homepage": "./",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "dist": "electron-builder",
    "dist:mac-arm": "electron-builder --mac --arm64",
    "dist:mac-intel": "electron-builder --mac --x64",
    "dist:win": "electron-builder --win --x64",
    "dist:all": "npm run dist:mac-arm && npm run dist:mac-intel && npm run dist:win"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-moveable": "^0.56.0",
    "react-selecto": "^1.26.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@electron/notarize": "^3.0.1",
    "@electron/osx-sign": "^2.0.0",
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "dotenv": "^16.5.0",
    "electron": "^36.3.2",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.creativeland.companiondashboard",
    "productName": "Companion Dashboard",
    "files": [
      "dist/**/*",
      "src/**/*",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "entitlements.plist",
      "entitlementsInherit": "entitlements.plist",
      "gatekeeperAssess": false,
      "identity": "Creativeland, LLC (22SGVMMH49)"
    },
    "afterSign": "./notarize.js",
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}